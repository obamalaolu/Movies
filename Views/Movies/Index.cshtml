@model IEnumerable<MoviesProject.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies Home</h2>

@Html.ActionLink("Add New Movie", "Create")
@*<a href="Create.cshtml"> Add New Movie </a>*@
@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("searchString")
        Genre: @Html.DropDownList("MovieGenre" , "All Movies")
        <input type="submit" value="Search"/>
        
    
    </p>
}

<table id="myTable" class="table-bordered table table-responsive table-striped table-condensed">
    <thead>
        <tr>

            <th>Title</th>
            <th>Release Date</th>
            <th>Price</th>
            <th>Genre</th>
            <th>image</th>

            <th>CRUD</th>

        </tr>


    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.title</td>
                <td>@item.releaseDate</td>
                <td>@item.price</td>
                <td>@item.genre</td>
                <td><img src="~/Content/img/@item.images" height="160" /></td>
                <td>
                    @Html.ActionLink("Detail |", "Detail", new { Id = item.Id })
                    @Html.ActionLink("Edit |", "Edit", new { Id = item.Id })
                    @Html.ActionLink("Delete |", "Delete", new { Id = item.Id })
                </td>
            </tr>
        }


    </tbody>

    

</table>
<script>

    $(document).ready(function () {
        $('#myTable').DataTable();

    } );
</script>
